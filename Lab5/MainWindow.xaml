<Window x:Class="Lab5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Name="MainGrid" ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.6*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <TextBox IsReadOnly="True" FontSize="25" Text="Количество введенных Z:" Grid.Column="1" HorizontalAlignment="Left"  VerticalAlignment="Top" Height="35" Width="495"/>
        <Label Name="_label" FontSize="30" Content="" Grid.Column="1" HorizontalAlignment="Left"  VerticalAlignment="Top" Margin="0,40,0,0"/>

        <TextBox IsReadOnly="True" FontSize="25" Text="Количество введенных фигур:" Grid.Column="1" HorizontalAlignment="Left"  VerticalAlignment="Top" Height="35" Width="495" Margin="0,95,0,0"/>
        <Label Name="_labelF" FontSize="30" Content="" Grid.Column="1" HorizontalAlignment="Left"  VerticalAlignment="Top" Margin="0,135,0,0"/>
    </Grid>
</Window>
