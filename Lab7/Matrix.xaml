            <TextBlock Name="Item3" TextAlignment="Center" Margin="2"/>
            <TextBlock Name="Item4" TextAlignment="Center" Margin="2"/>
            <TextBlock Name="Item5" TextAlignment="Center" Margin="2"/>
            <TextBlock Name="Item6" TextAlignment="Center" Margin="2"/>
            <TextBlock Name="Item7" TextAlignment="Center" Margin="2"/>
            <TextBlock Name="Item8" TextAlignment="Center" Margin="2"/>
            <TextBlock Name="Item9" TextAlignment="Center" Margin="2"/>
        </UniformGrid>
    </Border>
</UserControl>
